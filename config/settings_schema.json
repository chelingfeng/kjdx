  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product grid"
      },
      {
        "type": "select",
        "id": "prod_thumb_shape",
        "label": "Image shape",
        "options": [
          {
            "value": "natural",
            "label": "Natural"
          },
          {
            "value": "landscape",
            "label": "Landscape (3:2)"
          },
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "portrait",
            "label": "Portrait (2:3)"
          },
          {
            "value": "portrait_tall",
            "label": "Portrait (4:5)"
          }
        ],
        "default": "natural"
      },
      {
        "type": "select",
        "id": "prod_hover_effect",
        "label": "Hover effect",
        "default": "info",
        "options": [
          {
            "value": "info",
            "label": "Show title and price"
          },
          {
            "value": "image",
            "label": "Show second image"
          },
          {
            "value": "",
            "label": "None"
          }
        ]
      },
      {
        "type": "header",
        "content": "Reviews"
      },
      {
        "type": "paragraph",
        "content": "If you'd like to show reviews, please also install the free [Shopify Product Reviews](https://apps.shopify.com/product-reviews?ref=cleancanvas) app."
      },
      {
        "type": "checkbox",
        "id": "enable_reviews",
        "label": "Show reviews on the product page and featured product section",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_product_block_reviews",
        "label": "Show reviews on product cards",
        "default": false
      },
      {
        "type": "header",
        "content": "Product labels"
      },
      {
        "type": "checkbox",
        "id": "show_sale_label",
        "label": "Show sale label",
        "default": true
